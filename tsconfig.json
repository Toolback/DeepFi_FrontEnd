{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["components/*"],
			"@utils/*": ["utils/*"],
			"@theme/*": ["theme/*"],
			"@hooks/*": ["hooks/*"],
			"@contexts/*": ["contexts/*"],
			"@interfaces/*": ["interfaces/*"],
			"@models/*": ["models/*"]
		},
		"moduleResolution": "node"
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/_app.js", "data/StoreAppData.js", "lib/bc/wallet-connect.js", "components/app/ModaleConnect.js", "sections/app/dashboard/VaultsRender.jsx", "components/app/VaultCard.jsx", "components/app/UserMetricsRenderer.jsx", "sections/app/dashboard/VaultHero.jsx"],
	"exclude": ["node_modules"]
}
